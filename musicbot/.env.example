# Telegram API Credentials (Required)
BOT_TOKEN=your_bot_token_here
API_ID=your_api_id_here
API_HASH=your_api_hash_here

# User Account Session (Required for voice chat)
STRING_SESSION=your_user_session_string_here

# Assistant Configuration (Optional)
ASSISTANT_BOT_TOKEN=your_assistant_bot_token_here
ASSISTANT_SESSION=your_assistant_session_here

# Database Configuration (MongoDB - Recommended)
MONGO_DB_URI=mongodb://localhost:27017/musicbot
DB_NAME=musicbot

# Redis Configuration (Optional but Recommended)
REDIS_URL=redis://localhost:6379
USE_REDIS=True

# Owner and Permissions
OWNER_ID=your_telegram_user_id
SUDO_USERS=user_id1,user_id2,user_id3
LOG_GROUP_ID=your_log_group_id_here

# Audio Settings
AUDIO_QUALITY=high
MAX_AUDIO_DURATION=3600
DOWNLOAD_DIR=./temp

# Queue Settings
MAX_QUEUE_SIZE=100
AUTO_LEAVE_VC=True
AUTO_LEAVE_DELAY=300

# Feature Toggles
ENABLE_PLAYLISTS=True
ENABLE_GLOBAL_BAN=False
ENABLE_STATS=True

# Cache Settings
CACHE_DIR=./cache
CLEAN_CACHE_INTERVAL=3600

# Logging
LOG_LEVEL=INFO
LOG_FILE=musicbot.log